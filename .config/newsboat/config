
#external-url-viewer "url"
bind-key U show-urls
bind-key F1 help
external-url-viewer "urlscan -dc -r 'linkhandler {}'"

# tema de color general
color listnormal white default
color listfocus black yellow standout bold
color listnormal_unread blue default
color listfocus_unread yellow default bold
color info red black bold
color article white default bold

# tema de color regex para articulos
highlight all "---.*---" yellow
highlight feedlist ".*(0/0))" black
highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default
highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default


browser 		links 
max-items		50
macro o open-in-browser 
macro v set browser "tragar /usr/bin/mpv --profile=newsboat %u"; open-in-browser ; set browser "links %u"
macro c set browser "vim $XDG_CONFIG_HOME/newsboat/config"; open-in-browser ; set browser "links %u"
macro e set browser "vim $XDG_CONFIG_HOME/newsboat/urls"; open-in-browser ; set browser "links %u"
macro f set browser "firefox "; open-in-browser ; set browser "links %u"
macro w set browser "$BROWSER "; open-in-browser ; set browser "links %u"
macro y set browser "echo %u | clip -r -sel clip "; open-in-browser ; set browser "links %u"
macro p set browser "mpv --no-video --no-cache %u"; open-in-browser ; set browser "links %u"
macro a set browser "mpv --no-video --no-cache %u"; open-in-browser ; set browser "links %u"
macro d set browser "echo %u | tee $HOME/.local/share/newsboat/queue && podboat download-path '$HOME/descargas'"; open-in-browser
