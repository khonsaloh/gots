#!/usr/bin/python3

import hashlib
from sys import argv

if len(argv) > 1:
    hash_object = hashlib.sha256(argv[1].encode())
    print(hash_object.hexdigest())
    exit()
else:
    mystring = input(' mete cadena de caracteres a hashear: ')
    hash_object = hashlib.sha256(mystring.encode())
    print(hash_object.hexdigest())
    exit()

