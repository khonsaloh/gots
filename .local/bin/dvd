#!/bin/sh

ison="$(sudo blkid | grep 'sr[0-9]')"
[ -z "$ison" ] && notify-send "no hay ningÃºn dvd insertado" && exit
[ $(echo "$ison" | wc -l) -gt 1 ] \
	&& dvd=$(echo "$ison" | dmenu -l 20 -p 'elige dvd a reproduccir: ' | cut -d ' ' -f1 | tr -d ':') \
	&& [ -z "$dvd" ] && exit
notify-send "ðŸ“€ reproduciendo dvd";
a=$(xdo id) && xdo hide $a \
	&& mpv --really-quiet dvd://0 --dvd-device=$dvd --alang=es && xdo show $a 
