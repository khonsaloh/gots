function cd () {
	new_dir="$*";
	if [ $# -eq 0 ]; then
		new_dir=${HOME};
		clear && builtin cd "${new_dir}" && lsd --group-dirs first
	else
		clear && builtin cd "${new_dir}" && lsd -Ah --group-dirs first --no-symlink
	fi;
}

