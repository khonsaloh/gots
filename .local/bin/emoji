#!/bin/sh

chosen=$(cut -d ';' -f1 $HOME/.local/share/emoji | $HOME/scripts/suckless-branch/dmenu/dmenu -i -l 30 -fn 'Noto Color Emoji' -p 'emojis: ' | sed "s/ .*//")

[ -z "$chosen" ] && exit

if [ -n "$1" ]; then
	xdotool type "$chosen"
else
	echo "$chosen" | tr -d '\n' | xclip -selection clipboard
	notify-send "'$chosen' copied to clipboard." &
fi
